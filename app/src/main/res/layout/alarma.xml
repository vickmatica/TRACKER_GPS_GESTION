<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textodepuracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alarma"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewMensajeAlarma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mensajealarma"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/botonsalir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margenpordefecto"
        android:text="@string/salir" />

    <ImageView
        android:id="@+id/imageViewAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.70"
        android:src="@drawable/ic_alarma" />

</LinearLayout>